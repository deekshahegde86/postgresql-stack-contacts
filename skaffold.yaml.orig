apiVersion: skaffold/v2beta7
kind: Config
metadata:
  name: mvc-db-example
build:
  artifacts:
  - image: nodejs-guestbook-backend
    context: src/backend
    sync:
      infer:
      - '**/*'
  - image: nodejs-guestbook-frontend
    context: src/frontend
    sync:
      infer:
      - '**/*'
deploy:
  kubectl:
    manifests:
    - ./k8s/*
portForward:
- resourceType: service
  resourceName: nodejs-guestbook-frontend
  port: 80
  address: 0.0.0.0
  localPort: 4503